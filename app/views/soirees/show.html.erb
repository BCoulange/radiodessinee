<%- model_class = Soiree -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titre) %>:</strong></dt>
  <dd><%= @soiree.titre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:soundcloud_embed) %>:</strong></dt>
  <dd><%= @soiree.soundcloud_embed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:affiche_file_name) %>:</strong></dt>
  <dd><%= @soiree.affiche_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:affiche_content_type) %>:</strong></dt>
  <dd><%= @soiree.affiche_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:affiche_file_size) %>:</strong></dt>
  <dd><%= @soiree.affiche_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:affiche_updated_at) %>:</strong></dt>
  <dd><%= @soiree.affiche_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              soirees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_soiree_path(@soiree), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              soiree_path(@soiree),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
